<?xml version="1.0" ?>
<robot name="dummy_xyz_robot">
    <!--
        this is a dummy robot that is fixed in space (mass=0) but can be moved to arbitrary positions
        attach a gripper to the end_effector_link to control the gripper's position - orientation is fixed.
     -->
    <link name="base_link">
        <inertial>
            <mass value="0" />
            <inertia ixx = "0" ixy = "0" ixz = "0"
                    iyx = "0" iyy = "0" iyz = "0"
                    izx = "0" izy = "0" izz = "0" />
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="dark">
                <color rgba="0.2 0.2 0.2 1"/>
            </material>
        </visual>
    </link>

    <joint name="center_x" type="prismatic">
        <parent link="base_link"/>
        <child link="y_control"/>
        <axis xyz="1 0 0"/>
        <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="0.2"/>
    </joint>

    <link name="y_control">
        <inertial>
            <mass value="0.1" />
            <inertia ixx = "0" ixy = "0" ixz = "0"
                    iyx = "0" iyy = "0" iyz = "0"
                    izx = "0" izy = "0" izz = "0" />
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="red">
                <color rgba="0.9 0.2 0.2 1"/>
            </material>
        </visual>
    </link>

    <joint name="center_y" type="prismatic">
        <parent link="y_control"/>
        <child link="z_control"/>
        <axis xyz="0 1 0"/>
        <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="0.2"/>
    </joint>

    <link name="z_control">
        <inertial>
            <mass value="0.1" />
            <inertia ixx = "0" ixy = "0" ixz = "0"
                    iyx = "0" iyy = "0" iyz = "0"
                    izx = "0" izy = "0" izz = "0" />
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="green">
                <color rgba="0.2 0.9 0.2 1"/>
            </material>
        </visual>
    </link>

    <joint name="center_z" type="prismatic">
        <parent link="z_control"/>
        <child link="end_effector_link"/>
        <axis xyz="0 0 1"/>
        <limit effort="1000.0" lower="-0.5" upper="0.5" velocity="0.2"/>
    </joint>

    <link name="end_effector_link">
        <inertial>
            <mass value="0.1" />
            <inertia ixx = "0" ixy = "0" ixz = "0"
                    iyx = "0" iyy = "0" iyz = "0"
                    izx = "0" izy = "0" izz = "0" />
        </inertial>
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
            <material name="blue">
                <color rgba="0.2 0.2 0.9 1"/>
            </material>
        </visual>
    </link>

</robot>